<div class="cb-dashboard-container">
  <div class="columns">
    <%= render 'shared/dashboard_menu' %>

    <div class="column is-10 content">
      <h1>Routing - Stops
        <a class="button is-success is-rounded">
          <span class="icon is-small"><%= fa_icon('plus', type: :solid) %></span>
          <span>Add stop</span>
        </a>
      </h1>

      <table class="table is-hoverable is-narrow">
        <thead>
          <tr>
            <th>Stop ID</th>
            <th>Name</th>
            <th>Created On</th>
            <th>Last Modified</th>
            <th>Manage</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>1</td>
            <td>RHUL</td>
            <td>5 January 2020 15:45</td>
            <td>4 February 2020 21:32</td>
            <td>
              <a class="button is-rounded is-small is-info control">
                <span class="icon">
                  <%= fa_icon('pencil-alt', type: :solid) %>
                </span>
                <span>Modify</span>
              </a>
              <a class="button is-rounded is-small is-danger control">
                <span class="icon">
                  <%= fa_icon('trash-alt', type: :solid) %>
                </span>
                <span>Delete</span>
              </a>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>